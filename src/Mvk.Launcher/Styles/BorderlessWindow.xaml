<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style TargetType="{x:Type Window}" x:Key="BorderlessWindow" >
		<Setter Property="WindowChrome.CaptionHeight" Value="0" />
		<Setter Property="WindowChrome.UseAeroCaptionButtons" Value="False" />
		<Setter Property="WindowChrome.ResizeBorderThickness" Value="6" />
		<Setter Property="WindowChrome.GlassFrameThickness" Value="0" />
		<Setter Property="WindowChrome.CornerRadius" Value="2" />
		<Setter Property="Padding" Value="8" />

		<Style.Triggers>
			<Trigger Property="WindowState" Value="Maximized">
				<Setter Property="Padding" Value="8" />
			</Trigger>
		</Style.Triggers>
	</Style>
</ResourceDictionary>